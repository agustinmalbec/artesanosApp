<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 bg-light">
                <h2 class="text-center mb-4">Imagen</h2>
                <img src="/{{image.url}}" alt="imagen" class="img-fluid rounded shadow">
                <p class="text-center mt-3">{{image.description}}</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-3">Comentarios</h3>
                {{#if comments.length}}
                <ul class="list-group">
                    {{#each comments}}
                    <li class="list-group-item">
                        <img src="/{{this.avatar}}" alt="Avatar" class="rounded-circle" width="40" height="40">
                        <strong>{{this.name}}</strong>: {{this.comment}}
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p class="text-muted text-center">No hay comentarios en esta imagen.</p>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-3">Agregar Comentario</h3>
                <form method="POST" action="/notifications/comment/{{image.id_user}}">
                    <input type="hidden" name="id_image" value="{{image.id}}">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comentario</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Agregar Comentario</button>
                </form>
            </div>
        </div>
    </div>
</div>
<button
    class="btn btn-danger position-fixed bottom-0 end-0 m-4 shadow rounded-circle d-flex align-items-center justify-content-center"
    style="width: 60px; height: 60px; z-index: 1050;" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNotif">
    <span class="fs-5 fw-bold">{{notis}}</span>
</button>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNotif" aria-labelledby="offcanvasNotifLabel">
    <div class="offcanvas-header">
        <ul class="list-group">
            {{#each notifications}}
            {{#if this.status}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <img src="/{{this.avatar}}" alt="Avatar" class="rounded-circle" width="40" height="40">
                    {{#if (compare type "friend")}}
                    <strong>Solicitud de amistad de:</strong> {{this.usuario_envia}}
                    {{else}}
                    <strong>Comentario de:</strong> {{this.usuario_envia}}
                    {{/if}}
                </div>
                <div class="d-flex gap-2">
                    {{#if (compare type "friend")}}
                    <form action="/friends/{{this.id}}" method="post" class="d-inline">
                        <input type="hidden" name="id_user_from" value="{{this.user_id_send}}" />
                        <input type="hidden" name="id_user_to" value="{{this.user_id_receives}}" />
                        <button type="submit" class="btn btn-success btn-sm" name="action"
                            value="accept">Aceptar</button>
                        <button type="submit" class="btn btn-danger btn-sm" name="action"
                            value="decline">Rechazar</button>
                    </form>
                    {{else}}
                    <a href="/images/{{this.image}}" class="btn btn-success btn-sm">Ver comentario</a><a
                        href="/notifications/update/{{this.id}}" class="btn btn-danger btn-sm">X</a>
                    {{/if}}
                </div>
            </li>
            {{/if}}
            {{/each}}
        </ul>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
    </div>
</div>