<div class="container mt-5">
    <h2 class="text-center mb-4">Álbum de imágenes '{{album.title}}'</h2>
    {{#if images.length}}
    <div class="row g-4">
        {{#each images}}
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <a href="/images/{{this.id}}">
                    <img src="/{{this.url}}" alt="{{this.title}}" class="card-img-top img-fluid rounded">
                </a>
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    {{#if (compare this.featured 0)}}
                    <form action="/images/share/{{this.id}}" method="post">
                        <input type="hidden" name="id_album" value="{{../albumId}}">
                        <button type="submit" class="btn btn-primary w-100">Compartir foto con tus seguidores</button>
                    </form>
                    {{else}}
                    <p class="text-muted">Esta imagen se comparte con tus seguidores</p>
                    {{/if}}
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#{{this.id}}">
                        Agregar un tag
                    </button>
                    <div class="modal fade" id="{{this.id}}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title fs-5">Agregar tag</h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/tags/{{this.id}}" method="post">
                                        <div class="mb-3">
                                            <input type="hidden" name="album" value="{{../album.id}}" />
                                            <label for="tag" class="form-label">Tag</label>
                                            <input type="text" name="tag" class="form-control" />
                                        </div>
                                        <div class="col-auto">
                                            <button type="submit" class="btn btn-primary mb-3">Agregar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="/images/delete/{{this.id}}" class="btn btn-danger w-100 mt-2">Borrar</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-muted text-center">No hay imágenes en este álbum.</p>
    {{/if}}
</div>
<button
    class="btn btn-danger position-fixed bottom-0 end-0 m-4 shadow rounded-circle d-flex align-items-center justify-content-center"
    style="width: 60px; height: 60px; z-index: 1050;" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNotif">
    <span class="fs-5 fw-bold">{{notis}}</span>
</button>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNotif" aria-labelledby="offcanvasNotifLabel">
    <div class="offcanvas-header">
        <ul class="list-group">
            {{#each notifications}}
            {{#if this.status}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <img src="/{{this.avatar}}" alt="Avatar" class="rounded-circle" width="40" height="40">
                    {{#if (compare type "friend")}}
                    <strong>Solicitud de amistad de:</strong> {{this.usuario_envia}}
                    {{else}}
                    <strong>Comentario de:</strong> {{this.usuario_envia}}
                    {{/if}}
                </div>
                <div class="d-flex gap-2">
                    {{#if (compare type "friend")}}
                    <form action="/friends/{{this.id}}" method="post" class="d-inline">
                        <input type="hidden" name="id_user_from" value="{{this.user_id_send}}" />
                        <input type="hidden" name="id_user_to" value="{{this.user_id_receives}}" />
                        <button type="submit" class="btn btn-success btn-sm" name="action"
                            value="accept">Aceptar</button>
                        <button type="submit" class="btn btn-danger btn-sm" name="action"
                            value="decline">Rechazar</button>
                    </form>
                    {{else}}
                    <a href="/images/{{this.image}}" class="btn btn-success btn-sm">Ver comentario</a><a
                        href="/notifications/update/{{this.id}}" class="btn btn-danger btn-sm">X</a>
                    {{/if}}
                </div>
            </li>
            {{/if}}
            {{/each}}
        </ul>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
    </div>
</div>